<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.MainActivity">


    <EditText
        android:id="@+id/ocr_content"
        android:layout_width="350dp"
        android:layout_height="266dp"
        android:background="@drawable/text_boder"
        android:ems="10"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="6212018-10-08 19:49:05.0ocrnotes0http://118.89.37.35:58123/http://118.89.37.35:58123/22018-10-08 19:49:05.4921536484127788.jpgocrcontent6212018-10-08 19:49:05.0ocrnotes0http://118.89.37.35:58123/http://118.89.37.35:58123/22018-10-08 19:49:05.4921536484127788.jpgocrcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="201dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="348dp"
        android:layout_height="229dp"
        android:foregroundGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/ocr_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nav_icon"
        tools:layout_editor_absoluteX="12dp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text=" 扫描结果"
        android:textColor="#666666"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ocr_content"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/upload"
        android:contentDescription="上传"
        app:layout_constraintEnd_toEndOf="@+id/ocr_content"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ocr_content"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/title_input"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_input"
        android:hint="请输入文章标题"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ocr_content"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>